# Copy this file to .env for local development.
# Do NOT commit .env (keep secrets out of git).
# It is fine for .env.example to contain safe local defaults.

# Postgres
POSTGRES_USER=spacescale
POSTGRES_PASSWORD=spacescale_dev_pass
POSTGRES_DB=postgres

# App config
ADDR=:8080
BASE_DOMAIN=localtest.me
TRAEFIK_NET=traefik
TRAEFIK_ENTRYPOINT=web
ENABLE_TLS=0
WORKER_TOKEN=

# Database URLs (use the db service hostname)
DATABASE_URL=postgres://spacescale:spacescale_dev_pass@db:5432/spacescale?sslmode=disable
TEST_DATABASE_URL=postgres://spacescale:spacescale_dev_pass@db:5432/spacescale_test?sslmode=disable
